{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    // Silence known TypeScript deprecation warnings (e.g. moduleResolution=node10)
    // This keeps local developer workflows quiet until a coordinated TS upgrade.
    // (removed experimental ignoreDeprecations; keep moduleResolution as-is)
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  }
}
